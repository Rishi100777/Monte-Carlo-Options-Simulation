import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Slider } from "@/components/ui/slider";
import { Button } from "@/components/ui/button";
import { Play, Save } from "lucide-react";

export default function SimulationInputs({ params, setParams, onRun, onSave, isRunning }) {
  const handleChange = (field, value) => {
    setParams(prev => ({ ...prev, [field]: parseFloat(value) || 0 }));
  };

  return (
    <Card className="bg-gradient-to-br from-slate-900 to-slate-800 border-slate-700 shadow-2xl">
      <CardHeader className="border-b border-slate-700">
        <CardTitle className="text-2xl font-light text-white tracking-wide">
          Simulation Parameters
        </CardTitle>
      </CardHeader>
      <CardContent className="p-6 space-y-6">
        <div className="grid md:grid-cols-2 gap-6">
          <div className="space-y-2">
            <Label htmlFor="stock_price" className="text-slate-300 text-sm font-medium">
              Current Stock Price ($)
            </Label>
            <Input
              id="stock_price"
              type="number"
              step="0.01"
              value={params.stock_price}
              onChange={(e) => handleChange('stock_price', e.target.value)}
              className="bg-slate-800 border-slate-600 text-white text-lg focus:border-amber-500"
            />
          </div>

          <div className="space-y-2">
            <Label htmlFor="strike_price" className="text-slate-300 text-sm font-medium">
              Strike Price ($)
            </Label>
            <Input
              id="strike_price"
              type="number"
              step="0.01"
              value={params.strike_price}
              onChange={(e) => handleChange('strike_price', e.target.value)}
              className="bg-slate-800 border-slate-600 text-white text-lg focus:border-amber-500"
            />
          </div>

          <div className="space-y-2">
            <Label htmlFor="time" className="text-slate-300 text-sm font-medium">
              Time to Expiration (Years)
            </Label>
            <Input
              id="time"
              type="number"
              step="0.01"
              value={params.time_to_expiration}
              onChange={(e) => handleChange('time_to_expiration', e.target.value)}
              className="bg-slate-800 border-slate-600 text-white text-lg focus:border-amber-500"
            />
          </div>

          <div className="space-y-2">
            <Label htmlFor="rate" className="text-slate-300 text-sm font-medium">
              Risk-Free Rate (%)
            </Label>
            <Input
              id="rate"
              type="number"
              step="0.01"
              value={(params.risk_free_rate * 100).toFixed(2)}
              onChange={(e) => handleChange('risk_free_rate', e.target.value / 100)}
              className="bg-slate-800 border-slate-600 text-white text-lg focus:border-amber-500"
            />
          </div>
        </div>

        <div className="space-y-4 pt-4 border-t border-slate-700">
          <div className="flex justify-between items-center">
            <Label className="text-slate-300 text-sm font-medium">
              Volatility (Ïƒ): {(params.volatility * 100).toFixed(1)}%
            </Label>
          </div>
          <Slider
            value={[params.volatility * 100]}
            onValueChange={(value) => setParams(prev => ({ ...prev, volatility: value[0] / 100 }))}
            max={100}
            min={1}
            step={0.5}
            className="w-full"
          />
        </div>

        <div className="space-y-4 pb-4">
          <div className="flex justify-between items-center">
            <Label className="text-slate-300 text-sm font-medium">
              Number of Simulations: {params.num_simulations.toLocaleString()}
            </Label>
          </div>
          <Slider
            value={[params.num_simulations]}
            onValueChange={(value) => setParams(prev => ({ ...prev, num_simulations: value[0] }))}
            max={50000}
            min={1000}
            step={1000}
            className="w-full"
          />
        </div>

        <div className="flex gap-3 pt-4">
          <Button
            onClick={onRun}
            disabled={isRunning}
            className="flex-1 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-slate-900 font-semibold text-lg py-6"
          >
            {isRunning ? (
              <>
                <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-slate-900 mr-2" />
                Running...
              </>
            ) : (
              <>
                <Play className="w-5 h-5 mr-2" />
                Run Simulation
              </>
            )}
          </Button>
          <Button
            onClick={onSave}
            variant="outline"
            className="border-slate-600 text-slate-300 hover:bg-slate-700 py-6"
          >
            <Save className="w-5 h-5" />
          </Button>
        </div>
      </CardContent>
    </Card>
  );
}

