import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Trash2, TrendingUp, Calendar, DollarSign } from "lucide-react";
import { format } from "date-fns";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";

export default function SavedSimulations() {
  const queryClient = useQueryClient();

  const { data: simulations, isLoading } = useQuery({
    queryKey: ['simulations'],
    queryFn: () => base44.entities.Simulation.list('-created_date'),
    initialData: [],
  });

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.Simulation.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['simulations'] });
    },
  });

  return (
    <div className="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 p-4 md:p-8">
      <div className="max-w-7xl mx-auto space-y-8">
        <div className="flex justify-between items-center">
          <div>
            <h1 className="text-4xl font-extralight text-white tracking-tight">
              Saved Simulations
            </h1>
            <p className="text-slate-400 mt-2">View and manage your saved Monte Carlo simulations</p>
          </div>
          <Link to={createPageUrl("Simulator")}>
            <Button className="bg-amber-500 hover:bg-amber-600 text-slate-900">
              New Simulation
            </Button>
          </Link>
        </div>

        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {simulations.map((sim) => (
            <Card key={sim.id} className="bg-gradient-to-br from-slate-900 to-slate-800 border-slate-700 hover:border-slate-600 transition-all">
              <CardHeader className="border-b border-slate-700">
                <CardTitle className="text-xl font-light text-white flex justify-between items-start">
                  <span>{sim.name}</span>
                  <Button
                    variant="ghost"
                    size="icon"
                    onClick={() => deleteMutation.mutate(sim.id)}
                    className="text-slate-400 hover:text-red-400"
                  >
                    <Trash2 className="w-4 h-4" />
                  </Button>
                </CardTitle>
              </CardHeader>
              <CardContent className="p-6 space-y-4">
                <div className="space-y-3">
                  <div className="flex items-center justify-between text-sm">
                    <span className="text-slate-400">Stock Price:</span>
                    <span className="text-white font-medium">${sim.stock_price}</span>
                  </div>
                  <div className="flex items-center justify-between text-sm">
                    <span className="text-slate-400">Strike Price:</span>
                    <span className="text-white font-medium">${sim.strike_price}</span>
                  </div>
                  <div className="flex items-center justify-between text-sm">
                    <span className="text-slate-400">Volatility:</span>
                    <span className="text-white font-medium">{(sim.volatility * 100).toFixed(1)}%</span>
                  </div>
                  <div className="flex items-center justify-between text-sm">
                    <span className="text-slate-400">Time to Exp:</span>
                    <span className="text-white font-medium">{sim.time_to_expiration}Y</span>
                  </div>
                </div>

                <div className="pt-4 border-t border-slate-700 space-y-2">
                  <div className="flex items-center gap-2 text-emerald-400">
                    <TrendingUp className="w-4 h-4" />
                    <span className="text-sm">Call: ${sim.call_value?.toFixed(4)}</span>
                  </div>
                  <div className="flex items-center gap-2 text-rose-400">
                    <DollarSign className="w-4 h-4" />
                    <span className="text-sm">Put: ${sim.put_value?.toFixed(4)}</span>
                  </div>
                </div>

                <div className="pt-4 text-xs text-slate-500 flex items-center gap-2">
                  <Calendar className="w-3 h-3" />
                  {format(new Date(sim.created_date), 'MMM d, yyyy')}
                </div>
              </CardContent>
            </Card>
          ))}
        </div>

        {simulations.length === 0 && !isLoading && (
          <Card className="bg-slate-900 border-slate-700">
            <CardContent className="p-12 text-center">
              <p className="text-slate-400 text-lg">No saved simulations yet</p>
              <p className="text-slate-500 text-sm mt-2">Run a simulation and save it to see it here</p>
            </CardContent>
          </Card>
        )}
      </div>
    </div>
  );
}

